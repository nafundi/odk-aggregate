{
  "variables": {
    "digitalocean_api_token": "type digitalocean_api_token",
    "aws_access_key": "type your aws_access_key",
    "aws_secret_key": "type aws_secret_key"
  },
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./playbook.yml",
      "groups": "odk"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "packer_{{.Provider}}.box"
    }
  ],
  "builders": [
    {
      "type": "digitalocean",
      "api_token": "{{user `digitalocean_api_token`}}",
      "image": "debian-8-x64",
      "region": "nyc2",
      "size": "512mb",
      "ssh_username": "root"
    },
    {
      "type": "googlecompute",
      "account_file": "account.json",
      "project_id": "odk",
      "source_image": "debian-8",
      "zone": "us-central1-a"
    },
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "*debian-jessie-amd64*",
          "root-device-type": "ebs"
         },
        "most_recent": true
      },
      "instance_type": "t2.micro",
      "ssh_username": "admin",
      "ami_name": "packer-quick-start {{timestamp}}"
    }
  ]
}
