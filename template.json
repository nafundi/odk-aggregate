{
  "variables": {
    "digitalocean_api_token": "5e84d655f2267653f2ce53c7cccf78f47ef421052da86dca878ef737871cc4db",
  },
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./playbook.yml",
      "groups": "odk"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "packer_{{.Provider}}.box"
    }
  ],
  "builders": [
    {
      "type": "digitalocean",
      "api_token": "{{user `digitalocean_api_token`}}",
      "image": "debian-8-x64",
      "region": "nyc2",
      "size": "512mb",
      "ssh_username": "root"
    },
    {
      "type": "googlecompute",
      "account_file": "account.json",
      "project_id": "odk",
      "source_image": "debian-8",
      "zone": "us-central1-a"
    },
    {
      "type": "amazon-ebs",
      "access_key": "YOUR KEY HERE",
      "secret_key": "YOUR SECRET KEY HERE",
      "region": "us-east-1",
      "source_ami": "ami-fce3c696",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "packer-quick-start {{timestamp}}"
    }
  ]
}
